#!/bin/bash

## ğŸ“Œ Passo 1: Identificar o shell atual e arquivo de configuraÃ§Ã£o
current_shell=$(basename "$SHELL")
case $current_shell in
    "bash") config_file="$HOME/.bashrc" ;;
    "zsh") config_file="$HOME/.zshrc" ;;
    *)
        echo "âŒ Shell nÃ£o suportado: $current_shell"
        exit 1
        ;;
esac

## ğŸ“Œ Passo 2: Verificar se o arquivo de configuraÃ§Ã£o existe
if [ ! -f "$config_file" ]; then
    echo "âš ï¸  Arquivo de configuraÃ§Ã£o nÃ£o encontrado: $config_file"
    echo "ğŸ‘‰ Criando novo arquivo..."
    touch "$config_file"
fi

## ğŸ“Œ Passo 3: Gerar caminho absoluto do f2j.sh
script_path="$(pwd)/f2j.sh"

## ğŸ“Œ Passo 4: Verificar se o source jÃ¡ estÃ¡ configurado
if ! grep -q "source $script_path" "$config_file"; then
    echo "ğŸ”§ Adicionando fonte do script ao $config_file"
    echo -e "\n# FunÃ§Ã£o files-to-json (f2j - adicionado automaticamente)" >> "$config_file"
    echo "source $script_path" >> "$config_file"
    echo "âœ… ConfiguraÃ§Ã£o atualizada! Por favor reinicie o terminal ou execute:"
    echo "   source $config_file"
else
    echo "âœ… A funÃ§Ã£o jÃ¡ estÃ¡ configurada em $config_file"
    echo "   Nada a fazer. Tudo atualizado! ğŸš€"
fi
